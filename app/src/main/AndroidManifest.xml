<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.book">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <activity android:name=".activity.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.ManagerActivity"
            android:label="用户管理"
            />
        <activity android:name=".activity.UserUpdateActivity"
            android:label="用户编辑"
            />
        <activity android:name=".activity.BookManagerActivity"
            android:label="图书管理"
            />
        <activity android:name=".activity.BookDetailsActivity"
            android:label="图书编辑"
            />
        <activity android:name=".activity.NoticeActivity"
            android:label="图书馆公告"
            />
        <activity android:name=".activity.BorrowActivity"
            android:label="图书借阅"
            />
        <activity android:name=".activity.ReturnedActivity"
            android:label="图书归还"
            />
        <activity android:name=".activity.AddUserActivity"
            android:label="添加学生"
            />
        <activity android:name=".activity.BookCreateActivity"
            android:label="添加书籍"
            />
        <activity android:name=".activity.BookViewActivity"
            android:label="图书浏览"
            />
        <activity android:name=".activity.MessageActivity"
            android:label="留言中心"
            />
        <activity android:name=".activity.MessageReplyActivity"
            android:label="回复"
            />
        <activity android:name=".activity.UserViewActivity"
            android:label="选择用户"
            />
        <activity android:name=".activity.BookSearchManagerActivity"
            android:label="搜索结果"
            />
        <activity android:name=".activity.BookBorrowViewActivity"
            android:label="选择归还的书"
            />

    </application>

</manifest>