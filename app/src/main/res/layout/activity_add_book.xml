<?xml version="1.0" encoding="UTF-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">


        <include layout="@layout/title_layout" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="30dp"
            android:text="书名"
            android:textSize="13.5sp" />

        <EditText
            android:id="@+id/book_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:hint="书名"
            android:textColor="@color/textColor"
            android:textColorHint="@color/tv_second_light_gray"
            android:textCursorDrawable="@drawable/shp_cursor"
            android:textSize="13.5sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="30dp"
            android:text="isbn"
            android:textSize="13.5sp" />

        <EditText
            android:id="@+id/isbn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:hint="isbn"
            android:textColor="@color/textColor"
            android:textColorHint="@color/tv_second_light_gray"
            android:textCursorDrawable="@drawable/shp_cursor"
            android:textSize="13.5sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="30dp"
            android:text="作者"
            android:textSize="13.5sp" />

        <EditText
            android:id="@+id/author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:hint="作者"
            android:textColor="@color/textColor"
            android:textColorHint="@color/tv_second_light_gray"
            android:textCursorDrawable="@drawable/shp_cursor"
            android:textSize="13.5sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="30dp"
            android:text="出版社"
            android:textSize="13.5sp" />

        <EditText
            android:id="@+id/press"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:hint="出版社"
            android:textColor="@color/textColor"
            android:textColorHint="@color/tv_second_light_gray"
            android:textCursorDrawable="@drawable/shp_cursor"
            android:textSize="13.5sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="30dp"
            android:text="简介"
            android:textSize="13.5sp" />

        <EditText
            android:id="@+id/brief"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:hint="简介"
            android:textColor="@color/textColor"
            android:textColorHint="@color/tv_second_light_gray"
            android:textCursorDrawable="@drawable/shp_cursor"
            android:textSize="13.5sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="30dp"
            android:text="数量"
            android:textSize="13.5sp" />

        <EditText
            android:id="@+id/count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:hint="数量"
            android:inputType="number"
            android:maxLength="11"
            android:textColor="@color/textColor"
            android:textColorHint="@color/tv_second_light_gray"
            android:textCursorDrawable="@drawable/shp_cursor"
            android:textSize="13.5sp" />


        <Button
            android:id="@+id/btn_update"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_alignEnd="@+id/login_line"
            android:layout_alignLeft="@+id/login_line"
            android:layout_alignRight="@+id/login_line"
            android:layout_alignStart="@+id/login_line"
            android:layout_below="@+id/login_line"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:background="@drawable/shp_login"
            android:gravity="center"
            android:text="新建书籍"
            android:textColor="@color/white"
            android:textSize="13sp" />

    </LinearLayout>
</ScrollView>